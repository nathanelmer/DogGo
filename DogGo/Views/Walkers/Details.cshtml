@model DogGo.Models.ViewModels.WalkerFormModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
  <h1 class="mb-4">@Model.Walker.Name</h1>

  <section class="container">
    <img
      style="width:100px;float:left;margin-right:20px"
      src="@Model.Walker.ImageUrl"
    />
    <div>
      <label class="font-weight-bold">Name: </label>
      <span>@Model.Walker.Name</span>
    </div>
    <div>
      <label class="font-weight-bold">Neighborhood: </label>
      <span>@Model.Walker.Neighborhood.Name</span>
    </div>
  </section>

  <hr class="mt-5" />
  <div class="clearfix"></div>

    <section class="col-lg-4 col-md-8 container mt-5">
      <h1>Recent Walks</h1>
      <h5>Date-       Dog-      Duration</h5>
      <ul class="list-group mt-4">
        @foreach (Walks walk in Model.Walks) {
        <li class="list-group-item disabled" aria-disabled="true">
          @walk.Date ||  @walk.Dog.Name ||  @walk.Duration
        </li>
        }
      </ul>
    </section>
    <section class="col-lg-4 col-md-8 container mt-5">
        <h3>Total Walk Time: </h3>
        <h4>@Model.TotalWalkTime minutes</h4>
    </section>
  </div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.Walker.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
